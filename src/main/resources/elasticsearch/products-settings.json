{
  "index": {
    "max_ngram_diff": 8
  },
  "analysis": {
    "tokenizer": {
      "nori_user": {
        "type": "nori_tokenizer",
        "decompound_mode": "mixed"
      }
    },
    "filter": {
      "nori_posfilter": {
        "type": "nori_part_of_speech",
        "stoptags": [
          "E",
          "IC",
          "J",
          "MAG",
          "MAJ",
          "MM",
          "SP",
          "SSC",
          "SSO",
          "SC",
          "SE",
          "SF",
          "XPN",
          "XSA",
          "XSN",
          "XSV",
          "UNA",
          "NA",
          "VSV"
        ]
      },
      "my_ngram": {
        "type": "ngram",
        "min_gram": 2,
        "max_gram": 10
      }
    },
    "analyzer": {
      "korean_nori": {
        "type": "custom",
        "tokenizer": "nori_user",
        "filter": ["lowercase", "nori_posfilter"]
      },
      "korean_ngram": {
        "type": "custom",
        "tokenizer": "nori_user",
        "filter": ["lowercase", "nori_posfilter", "my_ngram"]
      }
    }
  }
}
